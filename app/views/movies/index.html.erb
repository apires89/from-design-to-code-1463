<div class="container" data-controller="search-movies">
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div>
        <%= form_with url: movies_path, method: :get, html: {data:{ search_movies_target: "form" }, class: "mb-4"} do |f| %>
          <%= f.label :query, "Type a movie title" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: { search_movies_target: "input", action: "keyup->search-movies#update"}
                           %>
        <% end %>

        <%= render "list", movies: @movies %>
      </div>
    </div>
  </div>
</div>
